---
import { getCollection } from "astro:content";
import Container from "@components/Container.astro";
import PageLayout from "@layouts/PageLayout.astro";
import Link from "@components/Link.astro";
import Tag from '@components/Tag.astro'
import { dateRange } from "@lib/utils";
import { SITE, HOME, SOCIALS, CODE_STACK, CMS_STACK, DESIGN_STACK, GENERAL_STACK } from "@consts";
import ArrowCard from "@components/ArrowCard.astro";

const blog = (await getCollection("blog"))
  .filter(post => !post.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0,SITE.NUM_POSTS_ON_HOMEPAGE);

const projects = (await getCollection("projects"))
  .filter(project => !project.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0,SITE.NUM_PROJECTS_ON_HOMEPAGE);

// const education = (await getCollection("education"))
//   .sort((a, b) => new Date(b.data.dateStart).valueOf() - new Date(a.data.dateStart).valueOf())
  
const allwork = (await getCollection("work"))
  .sort((a, b) => new Date(b.data.dateStart).valueOf() - new Date(a.data.dateStart).valueOf())
  .slice(0,SITE.NUM_WORKS_ON_HOMEPAGE);

const work = await Promise.all(
  allwork.map(async (item) => {
    const { Content } = await item.render();
    return { ...item, Content };
  })
);
---

<PageLayout title={HOME.TITLE} description={HOME.DESCRIPTION}>
  <Container>
    <h1 class="animate">
      Hi, I'm Cassi!
    </h1>
    <div class="space-y-16">
      <section>
        <article class="space-y-4">
          <p class="animate">
            I'm a design-forward Frontend Developer specializing in building web, marketing, and UX experiences. 
          </p>
        </article>
        <ul class="flex flex-wrap gap-2">
          {SOCIALS.map(SOCIAL => (
            <li class="flex gap-x-2 text-nowrap">
              <Link href={SOCIAL.HREF} external aria-label={`${SITE.NAME} on ${SOCIAL.NAME}`}>
                {SOCIAL.NAME}
              </Link>
              {"/"}
            </li>
          ))}
          <li class="line-clamp-1">
            <Link href={`mailto:${SITE.EMAIL}`} aria-label={`Email ${SITE.NAME}`}>
              {SITE.EMAIL}
            </Link>
          </li>
        </ul>
      </section>
 <!-- Project Preview Section -->
      <section class="animate">
        <div class="space-y-4">
          <div class="flex justify-between">
           <h2>
            Selected Work
          </h2>
            <!-- <a href="/projects" class="w-fit col-span-3 group flex gap-1 items-center underline decoration-[.5px] decoration-black/25 dark:decoration-white/50 hover:decoration-black dark:hover:decoration-white text-black dark:text-white underline-offset-2 blend">
              <span class="text-black/75 dark:text-white/75 group-hover:text-black group-hover:dark:text-white blend">
                All projects
              </span>
            </a> -->
          </div>
          <ul class="space-y-4">
            {projects.map((project) => (
              <li>
                <ArrowCard entry={project} />
              </li>
            ))}
          </ul>
        </div>
      </section>

      <section class="animate space-y-6" id="expirience-section">
        <div class="flex flex-wrap gap-y-2 items-center justify-between">
          <h2>
            Relevant Experience
          </h2>
          <Link external href="https://www.linkedin.com/in/cassigs/">
            See all work
          </Link>
        </div>
        <ul class="flex flex-col space-y-4">
          {work.map(entry => (
            <li>
      
              <div class="font-bold font-mono text-indigo-600 dark:text-rose-500 mb-.75">
                {entry.data.company}
              </div>
              <div class="text-sm font-mono text-indigo-400 dark:text-rose-200 mb-3">
                {entry.data.role} / {dateRange(entry.data.dateStart, entry.data.dateEnd)}
              </div>
              <div class="flex gap-2">
                {entry.data.technologies.map(tag => <Tag tag={tag} />)}
              </div>
              <article>
                <entry.Content />
              </article>

            </li>
          ))}
        </ul>
      </section>
    
            <section class="animate space-y-6" id="education-section">
        <div class="flex flex-wrap gap-y-2 items-center justify-between">
          <h2>
            Education
          </h2>
    
        </div>
        <ul class="flex flex-col space-y-4">
                      <li>
      
              <div class="font-bold font-mono text-indigo-600 dark:text-rose-500 mb-.75">
                Western Washington University
              </div>
              <div class="text-sm font-mono text-indigo-400 dark:text-rose-200 mb-3">
                B.A. Visual Journalism / 2006 - 2010
              </div>
   
              <article>Studied visual storytelling, digital media, and web content creation. Worked as Online Editor for Western Front and Klipsun Magazine, gaining experience in digital publishing, design, and content management.</article>
            </li>
                            <li>
      
              <div class="font-bold font-mono text-indigo-600 dark:text-rose-500 mb-.75">
                Dev Bootcamp
              </div>
              <div class="text-sm font-mono text-indigo-400 dark:text-rose-200 mb-3">
                Full Stack Engineering Certificate / 2017
              </div>
   
