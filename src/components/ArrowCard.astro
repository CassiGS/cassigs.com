---
import type { CollectionEntry } from "astro:content";

type Props = {
  entry: CollectionEntry<"blog"> | CollectionEntry<"projects">;
}

const { entry } = Astro.props;
---

<div class="relative group flex flex-nowrap items-center py-3 px-4 pr-10 rounded-lg border border-black/15 dark:border-white/20 text-black dark:text-white transition-colors duration-300 ease-in-out">
  <div class="flex flex-col flex-1 truncate">
    <div class="font-semibold">
      {entry.data.title}
    </div>
    <div class="text-sm">
      {entry.data.description}
    </div>
  </div>
  <div><a href={entry.data.repoURL}>github</a> / live site / case study</div>
</div>
